/* pages/reservation/reservation.wxss */
.container {
  padding: 32rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
  box-sizing: border-box;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-text {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}

.appointment-container {
  width: 100%;
}

.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 32rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.card-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 100rpx;
  background-color: #f0f0f0;
  color: #666;
}

.status-reviewing {
  background-color: #e8f4ff;
  color: #0052d9;
}

.status-success {
  background-color: #e8f8f2;
  color: #00a870;
}

.status-canceled {
  background-color: #fff0ed;
  color: #e34d59;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.info-label {
  font-size: 28rpx;
  color: #888;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  text-align: right;
}

.price-item {
  margin-top: 16rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.price {
  font-size: 36rpx;
  color: #e34d59;
  font-weight: bold;
}

.payment-info {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.payment-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.payment-desc {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.payment-desc text {
  margin-bottom: 12rpx;
}

.copy-btn {
  width: fit-content;
  margin-top: 24rpx;
  padding: 10rpx 32rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
  color: #333;
  font-size: 26rpx;
}

.btn-container {
  margin-top: 64rpx;
}

.cancel-btn {
  margin-top: 24rpx;
} 