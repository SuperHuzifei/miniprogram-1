.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.payment-header {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 40rpx 0;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.amount {
  font-size: 60rpx;
  font-weight: bold;
  color: #0052d9;
}

.qrcode-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.qrcode-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.qrcode-wrapper {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
}

.qrcode-tip {
  font-size: 28rpx;
  color: #666;
}

.action-buttons {
  margin: 40rpx 0;
}

.payment-notice {
  margin-top: 60rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.notice-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.notice-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 10rpx;
}

.mt-4 {
  margin-top: 20rpx;
} 