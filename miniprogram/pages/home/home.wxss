.container {
  padding: 0 0 40rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* Login Status */
.login-status {
  background-color: #0052d9;
  padding: 20rpx 30rpx;
  color: #fff;
  display: flex;
  justify-content: flex-end;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 2rpx solid #fff;
  margin-right: 10rpx;
}

.greeting {
  font-size: 28rpx;
}

.login-prompt {
  display: flex;
  align-items: center;
}

.login-text {
  font-size: 26rpx;
  margin-right: 20rpx;
}

.login-btn {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

/* Logo */
.logo-container {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.logo {
  width: 200rpx;
  height: 200rpx;
}

/* Carousel */
.swiper-container {
  margin: 0 auto;
  width: 100%;
  height: 360rpx;
}

/* Welcome Text */
.welcome-text {
  text-align: center;
  padding: 60rpx 30rpx;
}

.welcome-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

/* Features */
.features {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 40rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon {
  margin-bottom: 20rpx;
}

.feature-text {
  font-size: 26rpx;
  color: #666;
}

/* Appointment Button */
.appointment-btn {
  padding: 0 30rpx;
} 