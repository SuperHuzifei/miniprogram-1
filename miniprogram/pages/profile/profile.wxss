.container {
  padding: 0 0 40rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* User Info */
.user-info {
  background-color: #0052d9;
  padding: 40rpx 30rpx;
  color: #fff;
  margin-bottom: 20rpx;
}

.user-info-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  border: 4rpx solid #fff;
  background-color: #f0f0f0;
}

.nickname {
  margin-top: 20rpx;
  font-size: 36rpx;
  font-weight: 500;
}

.not-login {
  padding: 20rpx 0;
}

.login-tip {
  margin: 20rpx 0;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* Not Login Tip */
.not-login-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.info-icon {
  color: #0052d9;
  margin-bottom: 20rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
}

/* Header */
.header {
  padding: 30rpx 0;
  background-color: #fff;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* Appointment List */
.appointment-list {
  padding: 0 20rpx;
}

.appointment-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.appointment-info {
  flex: 1;
}

.appointment-date {
  font-size: 32rpx;
  color: #333;
}

.appointment-time, .appointment-phone {
  font-size: 28rpx;
  color: #666;
}

.appointment-action {
  margin-left: 20rpx;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  color: #0052d9;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
}

/* Loading */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Utility Classes */
.py-6 {
  padding-top: 60rpx;
  padding-bottom: 60rpx;
}

.mt-2 {
  margin-top: 20rpx;
}

.mt-4 {
  margin-top: 40rpx;
}

.mt-6 {
  margin-top: 60rpx;
}

.text-center {
  text-align: center;
}

.font-bold {
  font-weight: bold;
}

.appointment-status {
  font-size: 26rpx;
}

/* 预约状态样式 */
.status-waiting {
  color: #ff9800;
}

.status-success {
  color: #4caf50;
}

.status-canceled {
  color: #9e9e9e;
}

.status-refunding {
  color: #2196f3;
}

.status-refunded {
  color: #673ab7;
}

.appointment-amount {
  font-size: 26rpx;
  color: #f44336;
} 