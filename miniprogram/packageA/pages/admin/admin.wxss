/* 管理员页面样式 */
.admin-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  margin-left: 20rpx;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
}

.loading-text {
  margin-top: 20rpx;
  color: #888888;
  font-size: 28rpx;
}

/* 管理员登录样式 */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  height: 80vh;
}

.login-card {
  width: 100%;
  max-width: 600rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.login-title {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333333;
}

.login-form {
  margin-top: 30rpx;
}

/* 密码输入框样式 */
.password-input-container {
  margin-bottom: 30rpx;
}

.password-label {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.password-input {
  width: 100%;
  height: 88rpx;
  border: 1px solid #dcdcdc;
  border-radius: 8rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.login-btn {
  margin-top: 50rpx;
}

/* 标签页样式 */
.tabs {
  background-color: #ffffff;
  position: sticky;
  top: 88rpx;
  z-index: 99;
}

.tab-content {
  padding: 20rpx;
}

/* 搜索栏样式 */
.search-bar {
  margin-bottom: 20rpx;
}

.filter-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.status-filter {
  align-self: flex-start;
}

/* 用户列表样式 */
.user-list {
  background-color: #ffffff;
  border-radius: 8rpx;
  overflow: hidden;
}

/* 预约列表样式 */
.appointment-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.appointment-card {
  background-color: #ffffff;
  border-radius: 8rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.appointment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eeeeee;
}

.appointment-title {
  font-size: 32rpx;
  font-weight: 500;
}

.appointment-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
}

.pending {
  background-color: #fff3e0;
  color: #ff8c00;
}

.approved {
  background-color: #e8f5e9;
  color: #4caf50;
}

.canceled {
  background-color: #f5f5f5;
  color: #9e9e9e;
}

.appointment-info {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.label {
  color: #666666;
  width: 160rpx;
  flex-shrink: 0;
}

.value {
  color: #333333;
  flex: 1;
}

.appointment-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 20rpx;
}

/* 加载更多样式 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
}

/* 无数据样式 */
.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.no-data-text {
  color: #999999;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 管理员页面样式 */
.container {
  padding: 0;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  display: block;
}

.not-admin-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
  padding: 30rpx;
}

.error-icon {
  color: #e34d59;
  margin-bottom: 20rpx;
}

.tip-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.admin-content {
  padding-bottom: 40rpx;
}

.panel-content {
  padding: 30rpx;
}

.search-box,
.filter-box {
  margin-bottom: 30rpx;
}

.filter-options {
  margin-top: 20rpx;
}

/* 空状态提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  color: #888;
}

.loading {
  display: flex;
  justify-content: center;
  padding: 60rpx 0;
}

/* 工具类 */
.mt-4 {
  margin-top: 16rpx;
}

/* 对话框样式 */
.dialog-content {
  padding: 20rpx 0;
}

.dialog-text {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.dialog-input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

/* 轮播图管理 */
.banner-management {
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.banner-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.banner-item {
  position: relative;
  background: #f9f9f9;
  border-radius: 12rpx;
  overflow: hidden;
}

.banner-image-container {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.banner-index {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.banner-actions {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  display: flex;
  gap: 10rpx;
}

.add-banner {
  border: 2rpx dashed #ddd;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.add-banner-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
}

.add-text {
  margin-top: 10rpx;
  font-size: 28rpx;
}

.save-button {
  margin: 30rpx 0;
}

.banner-tips {
  margin-top: 30rpx;
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 12rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
} 